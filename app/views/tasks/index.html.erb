<h1><%= @project.title %></h1>
<h3>tasks</h3>

<table>
  <tr>
    <th>Todo</th>
    <th>Status</th>
    <th>Developer</th>
    <th></th>
    <th></th>
  </tr>

<% @tasks.each do |task| %>
  <tr>
    <td><%= task.todo %></td>
    <td><%= task.status %></td>
    <td><%= task.try(:developer).try(:full_name) %></td>
    <td><%= link_to 'Edit', edit_project_task_path(task.project, task) %></td>
    <td><%= link_to 'Destroy', [task.project, task], :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Task', new_project_task_path(params[:project_id]) %>
