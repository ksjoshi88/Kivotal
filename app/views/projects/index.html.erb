
<%= link_to 'Back', root_path %>
<div class="jumbotron">
  <h1 class="display-4">Manage Projects</h1>
  <%= link_to 'Create New Project', new_project_path %>
</div>

<% if @projects.count > 0 %>
  <table class="table table-bordered">
  <thead class="thead-light">
    <tr>
      <th> Title</th>
      <th> Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @projects.each do |project| %>
    <tr>
      <td>
        <%= project.title %>
      </td>
      <td>
          <%= link_to 'Edit', edit_project_path(project) %> &nbsp;
          <%= link_to 'Delete', project, method: :delete, data: { confirm: 'Are you sure?' } %> &nbsp;&nbsp;
          <%= link_to 'Manage Tasks', project_tasks_path(project) %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
<% else %>
  <h6> You are not managing any project currently.</h6>
<% end %>




